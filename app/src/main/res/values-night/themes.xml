<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslamiAppXML" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/navy</item>
        <item name="colorOnPrimary">@color/yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navy</item>
        <item name="colorSecondaryVariant">@color/navy</item>
        <item name="colorOnSecondary">@color/yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="background_img">
        <item name="android:background">@drawable/dark_bg</item>
    </style>
    <style name="text_app_color">
        <item name="color">@color/white</item>
    </style>
    <style name="icColor">
        <item name="android:tint">@color/yellow</item>
    </style>
    <style name="cardBackgroundColor">
        <item name="cardBackgroundColor">#13192D</item>
    </style>
</resources>