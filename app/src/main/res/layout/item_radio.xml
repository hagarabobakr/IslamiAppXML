<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/channel_name"
        style="@style/text_app_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/elmessiri"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="dzgfhgxgfhzgdhhcghxf"
        />

    <ImageView
        android:id="@+id/arrow_left"
        style="@style/icColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_double_arrow_right"
        app:layout_constraintEnd_toStartOf="@+id/ic_play"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/channel_name" />

    <ImageView
        android:id="@+id/ic_play"
        style="@style/icColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_play"
        app:layout_constraintEnd_toStartOf="@+id/ic_stop"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/arrow_left"
        app:layout_constraintTop_toBottomOf="@id/channel_name"
        />

    <ImageView
        android:id="@+id/ic_stop"
        style="@style/icColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_stop"
        app:layout_constraintEnd_toStartOf="@+id/arrow_right"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ic_play"
        app:layout_constraintTop_toBottomOf="@id/channel_name" />

    <ImageView
        android:id="@+id/arrow_right"
        style="@style/icColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_double_arrow_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ic_stop"
        app:layout_constraintTop_toBottomOf="@id/channel_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>